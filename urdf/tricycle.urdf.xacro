<?xml version="1.0"?>

<robot name="tricycle_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find sdv_test)/urdf/materials.xacro"/>
  <xacro:include filename="$(find sdv_test)/urdf/utils.urdf.xacro"/>

  <xacro:include filename="$(find sdv_test)/urdf/tricycle.gazebo.xacro"/>

  <xacro:include filename="$(find sdv_test)/urdf/support_wheel.urdf.xacro"/>
  <xacro:include filename="$(find sdv_test)/urdf/drive_wheel_assembly.urdf.xacro"/>
  
  <!-- Scale to fit model into Turtlebot House. Default 1.0 -->
  <xacro:property name="scale" value="0.5"/>

  <!-- base_link - base_footprint -->
  <link name="base_link">
    <!-- Set hight weight and low interia for now -->
    <inertial>
      <mass value="10.0"/>
      <xacro:box_inertia m="0.1" x="0.3" y="0.25" z="0.1"/>
    </inertial>
  </link>
  <link name="base_footprint"/>
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 ${0.025*scale}" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <link name="mpc_fakelink"/>
  <joint name="base_mpcfake_joint" type="fixed">
    <origin xyz="0.70 0 ${0.025*scale}" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="mpc_fakelink"/>
  </joint>


  
  <!-- Macros value = 0.217-->
  <xacro:property name="support_wheel_separation" value="${0.4265*scale}"/>

  <xacro:support_wheel name="support_wheel_right" separation="${support_wheel_separation}" reflect="1.0" parent="base_link" scale="${scale}"/>
  <xacro:support_wheel name="support_wheel_left" separation="${support_wheel_separation}" reflect="-1.0" parent="base_link" scale="${scale}"/>

  <!-- Connects Steer & Drive Wheels -->
  <xacro:drive_wheel_assembly scale="${scale}"/>
  <!-- Gazebo extentions-> tricycle.gazebo.xacro: - Gazebo Properties & Connection -->
  <xacro:base_gazebo/>

  <!-- Sensors -->

  <!-- d435 -->
  <!-- <joint name="base_link_d435" type="fixed">
