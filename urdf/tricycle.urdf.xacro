  <!-- IMU -->
  <!-- <joint name="base_footprint_imu" type="fixed">
    <origin xyz="1.881 0.032 1.122" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="imu"/>
    <axis xyz="0.0 0.0 0.0"/>
  </joint>
  <link name="imu">
  </link> -->
  <!-- IMU -->

  <!-- Lidars -->

  <!-- Rear Lidar -->
  <joint name="base_footprint_rearlidar" type="fixed">
    <origin xyz="${1.27315*scale} 0.0 ${0.10*scale}" rpy="0 0 3.14"/> <!-- Steer wheel joint 1.927 0 0.053 -->
    <parent link="base_link"/>
    <child link="rearlidar"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="rearlidar">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="${0.01*scale} ${0.01*scale} ${0.01*scale}"/>
        </geometry>
        <material name="red" />
      </visual>
  </link>
  <gazebo reference="rearlidar">
    <material>Gazebo/Red</material>
    <turnGravityOff>false</turnGravityOff>
    <sensor type="ray" name="rear_hokuyo_sensor">
    <pose>0 0 0 0 0 0</pose>
    <visualize>false</visualize>
    <update_rate>10</update_rate>
    <ray>
        <scan>
        <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-2.356194490192345</min_angle>
            <max_angle>2.356194490192345</max_angle>
        </horizontal>
        </scan>
        <range>
            <min>0.10</min>
            <max>16.0</max>
            <resolution>0.01</resolution>
        </range>
        <noise>
        <type>gaussian</type>
        <!-- Noise parameters based on published spec for Hokuyo laser
            achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
            stddev of 0.01m will put 99.7% of samples within 0.03m of the true
            reading. -->
        <mean>0.0</mean>
        <stddev>0.01</stddev>
        </noise>
    </ray>
    <plugin name="hokuyo_node" filename="libgazebo_ros_laser.so">
        <topicName>/scan_rear</topicName>
        <frameName>rearlidar</frameName>
    </plugin>
    </sensor>
  </gazebo>
  <!-- Rear Lidar -->

  <!-- Front Lidar -->
  <joint name="base_footprint_frontlidar" type="fixed">
    <origin xyz="${2.03499*scale} 0.0 ${0.36406*scale}" rpy="0 0 0"/> <!-- Steer wheel joint 1.927 0 0.053 -->
    <parent link="base_link"/>
    <child link="frontlidar"/>
    <!-- <axis xyz="0 0 1"/> -->
  </joint>
  <link name="frontlidar">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="${0.01*scale} ${0.01*scale} ${0.01*scale}"/>
        </geometry>
      </visual>
  </link>
  <gazebo reference="frontlidar">
    <material>Gazebo/Red</material>
    <turnGravityOff>false</turnGravityOff>
    <sensor type="ray" name="head_hokuyo_sensor">
    <pose>0 0 0 0 0 0</pose>
    <visualize>false</visualize>
    <update_rate>10</update_rate>
    <ray>
        <scan>
        <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-2.356194490192345</min_angle>
            <max_angle>2.356194490192345</max_angle>
        </horizontal>
        </scan>
        <range>
            <min>0.10</min>
            <max>16.0</max>
            <resolution>0.01</resolution>
        </range>
        <noise>
        <type>gaussian</type>
        <!-- Noise parameters based on published spec for Hokuyo laser
            achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
            stddev of 0.01m will put 99.7% of samples within 0.03m of the true
            reading. -->
        <mean>0.0</mean>
        <stddev>0.01</stddev>
        </noise>
    </ray>
    <plugin name="hokuyo_node" filename="libgazebo_ros_laser.so">
        <topicName>/scan_front</topicName>
        <frameName>frontlidar</frameName>
    </plugin>
    </sensor>
  </gazebo>
  <!-- Front Lidar -->

  <!-- end -->


  
  
</robot>
